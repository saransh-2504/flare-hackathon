  "engines": {
    "node": ">=16.x"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "hardhat": "^2.22.0",
    "nodemon": "^3.0.2"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "ethers": "^6.9.0"
  }
}
