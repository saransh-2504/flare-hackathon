{
  "name": "flare-autopilot",
  "version": "1.0.0",
  "description": "Smart Account Automation Hub for Flare Network",
  "main": "api/server.js",
  "scripts": {
    "start": "node api/server.js",
    "dev": "nodemon api/server.js",
    "test": "npx hardhat test",
    "compile": "npx hardhat compile",
    "deploy:local": "npx hardhat run scripts/deploy.js --network hardhat",
    "deploy:coston2": "npx hardhat run scripts/deploy.js --network coston2",
    "deploy:flare": "npx hardhat run scripts/deploy.js --network flare",
    "vercel-build": "npx hardhat compile",
    "verify": "node verify-deployment.js",
    "test:api": "node test-api-local.js"
  },
  "keywords": [
    "flare",
    "automation",
    "smart-accounts",
    "ftso",
    "fdc",
    "fassets",
    "defi"
  ],
